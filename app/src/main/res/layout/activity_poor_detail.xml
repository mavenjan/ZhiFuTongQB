<?xml version="1.0" encoding="utf-8"?><android.support.constraint.ConstraintLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/white"    android:orientation="vertical"    tools:context=".ui.activity.PoorDetailActivity">    <View        android:id="@+id/view_startusbar"        android:layout_width="0dp"        android:layout_height="25dp"        android:background="@color/colorPrimary"        app:layout_constraintLeft_toLeftOf="parent"        app:layout_constraintRight_toRightOf="parent"/>    <android.support.v7.widget.Toolbar        android:id="@+id/toolbar"        android:layout_width="0dp"        android:layout_height="?attr/actionBarSize"        android:background="?attr/colorPrimary"        app:layout_constraintLeft_toLeftOf="parent"        app:layout_constraintRight_toRightOf="parent"        app:layout_constraintTop_toBottomOf="@id/view_startusbar"        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"    >    </android.support.v7.widget.Toolbar>    <android.support.constraint.ConstraintLayout        android:id="@+id/cl_title"        android:layout_width="0dp"        android:layout_height="48dp"        android:background="@color/colorPrimary"        android:visibility="gone"        app:layout_constraintLeft_toLeftOf="parent"        app:layout_constraintRight_toRightOf="parent"        app:layout_constraintTop_toBottomOf="@id/toolbar">        <ImageView            android:id="@+id/left_image"            android:layout_width="48dp"            android:layout_height="48dp"            android:layout_marginBottom="0dp"            android:layout_marginLeft="0dp"            android:layout_marginTop="0dp"            android:adjustViewBounds="true"            android:background="@drawable/common_tab_bg"            android:padding="10dp"            android:scaleType="fitXY"            android:src="@drawable/back"            app:layout_constraintBottom_toBottomOf="parent"            app:layout_constraintLeft_toLeftOf="parent"            app:layout_constraintTop_toTopOf="parent"/>        <TextView            android:id="@+id/title"            android:layout_width="wrap_content"            android:layout_height="48dp"            android:layout_marginBottom="8dp"            android:layout_marginLeft="8dp"            android:layout_marginRight="8dp"            android:layout_marginTop="8dp"            android:gravity="center"            android:text="信息详情"            android:textColor="@color/white"            android:textSize="20sp"            app:layout_constraintBottom_toBottomOf="parent"            app:layout_constraintEnd_toEndOf="parent"            app:layout_constraintLeft_toLeftOf="@+id/left_image"            app:layout_constraintRight_toRightOf="parent"            app:layout_constraintTop_toTopOf="parent"        />    </android.support.constraint.ConstraintLayout>    <android.support.v4.widget.SwipeRefreshLayout        android:id="@+id/swipe_container"        android:layout_width="0dp"        android:layout_height="0dp"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintLeft_toLeftOf="parent"        app:layout_constraintRight_toRightOf="parent"        app:layout_constraintTop_toBottomOf="@id/cl_title">        <ScrollView            android:layout_width="match_parent"            android:layout_height="match_parent"            android:scrollbars="none">        </ScrollView>    </android.support.v4.widget.SwipeRefreshLayout>    <TextView        android:id="@+id/tv_name"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginLeft="24dp"        android:layout_marginStart="24dp"        android:layout_marginTop="24dp"        android:text="户主姓名:"        app:layout_constraintLeft_toLeftOf="parent"        app:layout_constraintTop_toBottomOf="@+id/cl_title"        tools:layout_editor_absoluteY="91dp"/>    <TextView        android:id="@+id/tv_name1"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginLeft="8dp"        android:layout_marginStart="8dp"        android:text="张镜星"        app:layout_constraintLeft_toRightOf="@+id/tv_name"        app:layout_constraintTop_toTopOf="@+id/tv_name"    />    <TextView        android:id="@+id/tv_person_num"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginTop="16dp"        android:text="人口数:"        app:layout_constraintLeft_toLeftOf="@+id/tv_name"        app:layout_constraintTop_toBottomOf="@+id/tv_name"        tools:layout_editor_absoluteX="24dp"    />    <TextView        android:id="@+id/tv_person_num1"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginLeft="8dp"        android:layout_marginStart="8dp"        android:text="4"        app:layout_constraintLeft_toRightOf="@+id/tv_person_num"        app:layout_constraintTop_toTopOf="@+id/tv_person_num"    />    <TextView        android:id="@+id/tv_house_local"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginTop="16dp"        android:text="坐标:"        app:layout_constraintLeft_toLeftOf="@+id/tv_person_num"        app:layout_constraintTop_toBottomOf="@+id/tv_person_num"        tools:layout_editor_absoluteX="24dp"/>    <TextView        android:id="@+id/tv_house_local1"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginLeft="8dp"        android:layout_marginStart="8dp"        android:text="暂未获取位置"        app:layout_constraintLeft_toRightOf="@+id/tv_house_local"        app:layout_constraintTop_toTopOf="@+id/tv_house_local"    />    <ImageView        android:id="@+id/iv_person_photo"        android:layout_width="82dp"        android:layout_height="82dp"        android:layout_marginEnd="24dp"        android:layout_marginRight="24dp"        android:background="@drawable/line_photo"        app:layout_constraintBottom_toBottomOf="@+id/tv_house_local1"        app:layout_constraintRight_toRightOf="parent"        app:layout_constraintTop_toTopOf="@+id/tv_name1"        app:srcCompat="@drawable/default_useravatar"/>    <TextView        android:id="@+id/tv_address"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginTop="16dp"        android:text="地址:"        app:layout_constraintLeft_toLeftOf="@+id/tv_house_local"        app:layout_constraintTop_toBottomOf="@+id/tv_house_local"        tools:layout_editor_absoluteX="24dp"/>    <TextView        android:id="@+id/tv_address1"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginLeft="8dp"        android:layout_marginStart="8dp"        android:text="河南省许昌市禹州市苌庄乡五坪村"        app:layout_constraintLeft_toRightOf="@+id/tv_address"        app:layout_constraintTop_toTopOf="@+id/tv_address"    />    <TextView        android:id="@+id/tv_house_attribute"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginTop="16dp"        android:text="户属性:"        app:layout_constraintLeft_toLeftOf="@+id/tv_address"        app:layout_constraintTop_toBottomOf="@+id/tv_address"        tools:layout_editor_absoluteX="25dp"/>    <TextView        android:id="@+id/tv_house_attribute1"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginLeft="8dp"        android:layout_marginStart="8dp"        android:text="一般贫困户"        app:layout_constraintLeft_toRightOf="@+id/tv_house_attribute"        app:layout_constraintTop_toTopOf="@+id/tv_house_attribute"    />    <TextView        android:id="@+id/tv_season"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginTop="16dp"        android:text="致贫原因:"        app:layout_constraintLeft_toLeftOf="@+id/tv_house_attribute"        app:layout_constraintTop_toBottomOf="@+id/tv_house_attribute"        tools:layout_editor_absoluteX="26dp"    />    <TextView        android:id="@+id/tv_season1"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginLeft="8dp"        android:layout_marginStart="8dp"        android:text="因病、因残"        app:layout_constraintLeft_toRightOf="@+id/tv_season"        app:layout_constraintTop_toTopOf="@+id/tv_season"    />    <TextView        android:id="@+id/tv_income"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginTop="16dp"        android:text="年人均纯收入（元）:"        app:layout_constraintLeft_toLeftOf="@+id/tv_season"        app:layout_constraintTop_toBottomOf="@+id/tv_season"        tools:layout_editor_absoluteX="25dp"/>    <TextView        android:id="@+id/tv_income1"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginLeft="8dp"        android:layout_marginStart="8dp"        android:text="2000"        app:layout_constraintLeft_toRightOf="@+id/tv_income"        app:layout_constraintTop_toTopOf="@+id/tv_income"    />    <TextView        android:id="@+id/tv_in_time"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginTop="16dp"        android:text="识别时间:"        app:layout_constraintLeft_toLeftOf="@+id/tv_income"        app:layout_constraintTop_toBottomOf="@+id/tv_income"        tools:layout_editor_absoluteX="25dp"/>    <TextView        android:id="@+id/tv_in_time1"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginLeft="8dp"        android:layout_marginStart="8dp"        android:text="2016-11-12"        app:layout_constraintLeft_toRightOf="@+id/tv_in_time"        app:layout_constraintTop_toTopOf="@+id/tv_in_time"    />    <TextView        android:id="@+id/tv_out_time"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginTop="16dp"        android:text="预计脱贫时间:"        app:layout_constraintLeft_toLeftOf="@+id/tv_in_time"        app:layout_constraintTop_toBottomOf="@+id/tv_in_time"        tools:layout_editor_absoluteX="26dp"/>    <TextView        android:id="@+id/tv_out_time1"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:layout_marginLeft="8dp"        android:layout_marginStart="8dp"        android:text="2017-12-31"        app:layout_constraintLeft_toRightOf="@+id/tv_out_time"        app:layout_constraintTop_toTopOf="@+id/tv_out_time"/>    <Button        android:id="@+id/bt_get_local"        android:layout_width="wrap_content"        android:layout_height="38dp"        android:layout_marginBottom="0dp"        android:layout_marginLeft="24dp"        android:background="@drawable/button_bg_primary"        android:text="获取坐标"        android:textColor="@color/white"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintLeft_toRightOf="parent"        tools:layout_editor_absoluteX="16dp"/>    <Button        android:id="@+id/bt_goto"        android:layout_width="wrap_content"        android:layout_height="38dp"        android:layout_marginBottom="0dp"        android:layout_marginEnd="8dp"        android:layout_marginStart="8dp"        android:background="@drawable/button_bg_primary"        android:text="到这去"        android:textColor="@color/white"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintEnd_toStartOf="@+id/btn_help_you"        app:layout_constraintLeft_toRightOf="@id/bt_get_local"        app:layout_constraintStart_toEndOf="@+id/bt_get_local"/>    <Button        android:id="@+id/btn_help_you"        android:layout_width="wrap_content"        android:layout_height="38dp"        android:layout_marginBottom="0dp"        android:layout_marginRight="24dp"        android:background="@drawable/button_bg_primary"        android:text="帮扶"        android:textColor="@color/white"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintEnd_toEndOf="parent"/>    <android.support.constraint.Guideline        android:id="@+id/guideline"        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:orientation="vertical"        app:layout_constraintGuide_percent="0.5"/>    <android.support.v7.widget.RecyclerView        android:id="@+id/rv_person_house"        android:layout_width="360dp"        android:layout_height="0dp"        android:layout_marginBottom="16dp"        android:layout_marginEnd="32dp"        android:layout_marginLeft="32dp"        android:layout_marginRight="32dp"        android:layout_marginStart="32dp"        android:layout_marginTop="16dp"        android:paddingLeft="24dp"        android:paddingRight="24dp"        app:layout_constraintBottom_toTopOf="@+id/bt_get_local"        app:layout_constraintLeft_toLeftOf="parent"        app:layout_constraintRight_toRightOf="parent"        app:layout_constraintTop_toBottomOf="@+id/tv_out_time">    </android.support.v7.widget.RecyclerView></android.support.constraint.ConstraintLayout>