<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lib="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:gravity="center"
    android:layout_width="200dp"
    android:layout_height="80dp">
    <!--<ProgressBar-->
        <!--android:layout_width="28dp"-->
        <!--android:layout_height="28dp"-->
        <!--android:indeterminate="false"/>-->
    <com.github.glomadrian.loadingballs.BallView
        android:layout_centerHorizontal="true"
        android:id="@+id/loading_ballview"
        android:layout_margin="5dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        lib:balls="3"
        lib:ball_size="3dp"
        lib:movement_cycle_time="1200"
        lib:enable_size_animation="false"
        lib:ball_colors="@array/colors"
        lib:path="square"
        android:layout_gravity="center"
        />
    <TextView
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimary"
        android:layout_below="@id/loading_ballview"
        android:id="@+id/tv_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="正在加载中..."/>
</RelativeLayout>