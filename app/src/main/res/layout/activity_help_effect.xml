<?xml version="1.0" encoding="utf-8"?><LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/white"    android:orientation="vertical">    <com.nxt.net.zhifutongqb.widget.ZTitleBar        android:id="@+id/ztitlebar"        android:layout_width="match_parent"        android:layout_height="73dp"        android:background="?attr/colorPrimary"        android:gravity="bottom"        android:onClick="onLeftClick"        app:ztitleBarTitle="帮扶成效"/>    <android.support.v4.widget.SwipeRefreshLayout        android:id="@+id/swipe_container"        android:layout_width="match_parent"        android:layout_gravity="center"        android:layout_height="match_parent">        <android.support.v7.widget.RecyclerView            android:paddingTop="5dp"            android:paddingBottom="5dp"            android:id="@+id/rv_poor_total"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:layout_margin="5dp">        </android.support.v7.widget.RecyclerView>    </android.support.v4.widget.SwipeRefreshLayout></LinearLayout>